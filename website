    function setLang(lang){
      document.querySelectorAll('[data-i18n]').forEach(el=>{
        const k = el.getAttribute('data-i18n');
        if(i18n[lang][k]) el.textContent = i18n[lang][k];
      });
      document.documentElement.lang = lang;
      localStorage.setItem('lang', lang);
    }
    document.addEventListener('DOMContentLoaded',()=>{
      const lang = localStorage.getItem('lang')||'es';
      setLang(lang);
      document.getElementById('lang-es').addEventListener('click',()=>setLang('es'));
      document.getElementById('lang-en').addEventListener('click',()=>setLang('en'));
      // Simple form handler (replace MAILTO/HREF targets below)
      const form = document.getElementById('contact-form');
      form.addEventListener('submit',(e)=>{
        e.preventDefault();
        const data = Object.fromEntries(new FormData(form).entries());
        const body = encodeURIComponent(`${data.name}\n${data.phone}\n${data.email}\n\n${data.message}`);
        // Tip: Cambia el correo de destino aquí
        window.location.href = `mailto:mayliparra@dmpconsultingservices.net?subject=Contacto%20desde%20la%20web&body=${body}`;
      });
    });
